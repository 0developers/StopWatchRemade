<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_stopwatch">

    <fragment
        android:id="@+id/navigation_stopwatch"
        android:name="com.zerodevs.stopwatch.ui.stopwatch.StopwatchFragment"
        android:label="StopWatch"
        tools:layout="@layout/fragment_stopwatch" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.zerodevs.stopwatch.ui.dashboard.DashboardFragment"
        android:label="Timer"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.zerodevs.stopwatch.ui.timer.TimerFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_timer" />
</navigation>